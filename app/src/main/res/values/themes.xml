<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Paasto" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryLight</item>
        <item name="colorOnPrimary">@color/textOnPrimary</item>
        <!-- Background -->
        <item name="backgroundColor">@color/background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryDark</item>
        <!-- Customize your theme here. -->
        <item name="android:datePickerDialogTheme">@style/PaastoDateTimePickerDialogTheme</item> <!-- TODO: Handle older android APIs -->
        <item name="android:timePickerDialogTheme">@style/PaastoDateTimePickerDialogTheme</item> <!-- TODO: Handle older android APIs -->
    </style>


    <style name="PaastoDateTimePickerDialogTheme" parent="Theme.AppCompat.DayNight.Dialog">
<!--        <item name="colorAccent">@color/primary</item>--> <!-- TODO -->
    </style>

    <style name="Theme.Paasto.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Paasto.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Paasto.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>